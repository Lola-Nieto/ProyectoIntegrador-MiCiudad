<!DOCTYPE html>
<html lang="es">

@{
    var id = Context.Session.GetInt32("idUsuario");
}

<head>
     
     <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - MiCiudad</title>
    
</head>

<body>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/js/utils.js" asp-append-version="true"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <header> 
        <nav>
            <img src='@Url.Content("~/img/logo.png")' alt="Logo" class="logo"/>
            <ul>
                <li><a href="#">Chats</a></li>
                <li><a href="#">Servicios</a></li>
                <li><a href="#">Marketplace</a></li>
                <li><a href="#">Reportes</a></li>
                <li><a href="@Url.Action("Index", "Calendario")">Calendario</a></li>
            </ul>
            @if(id != null){
                <a class="login-btn" href='@Url.Action("MiCuenta", "Account")'>MiCuenta</a>
            }else{
                <a class="login-btn" href='@Url.Action("LogIn", "Account")'>Iniciar Sesión</a>
            }
            
            
            
        </nav>
    </header>


    <main role="main">
        @RenderBody()
    </main>

    <footer class="footer">
        &copy; @DateTime.Now.Year - MiCiudad
    </footer>

    @await RenderSectionAsync("Scripts", required: false)




</body>
</html>

