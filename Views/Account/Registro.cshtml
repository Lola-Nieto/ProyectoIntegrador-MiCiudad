@{
    ViewData["Title"] = "Crear Cuenta - MiCiudad";
}

<div class="formu"> 
<div class="form-container">
        <h2 class="Titulo">CREAR CUENTA</h2>

        <form method="post" 
        action='@Url.Action("RegistroValidacion","Account")' onsubmit="return ValidarRegistro()">
       
        <div id="parte1">
            <label for="nombre">Nombre</label>
            <input type="text" id="nombre" name="nombre" required>

            <label for="apellido">Apellido</label>
            <input type="text" id="apellido" name="apellido" required>

            <label for="dni">DNI</label>
            <input type="int" id="dni" name="dni" required>

            <label for="email">Mail</label>
            <input type="email" id="email" name="email" required>

            <h3> Domicilio </h3>  
            <label for="calle">Calle</label>
            <input type="text" id="calle" name="calle" required>
            
            <label for="altura">Altura</label>
            <input type="number" id="altura" name="altura" required>
            
            <div class="buttons">
                <a href='@Url.Action("LogIn", "Account")' class="atras">Atrás</a>
                <button onclick="ValidarRegistro1eraParte()"  class="siguiente">Siguiente</button> 
            </div>

        </div>
            <div id="parte2" style="display:none"> 
                <h3> Cuenta </h3> 
                <label for="usuario">Usuario</label>
                <input type="text" id="usuario" name="usuario" placeholder="Escriba un nombre para que sus vecinos lo identifiquen" required >

                <label for="password1">Contraseña</label>
                <input type="password" id="contraseña" name="contraseña" required>

                <label for="password2">Repetir contraseña</label>
                <input type="password" id="password2" name="password2" required>
                
                <div class="buttons">
                    <a href='@Url.Action("LogIn", "Account")' class="atras">Atrás</a>
                    <button type="submit" class="siguiente" > Siguiente </button>
                </div>
            </div>
            <p id="mostrarError"> 
            
            </p> 
            
       
        <button onclick="ValidarRegistro1eraParte(dni)">boton</button>
            
        </form>
        </div>
    </div>
