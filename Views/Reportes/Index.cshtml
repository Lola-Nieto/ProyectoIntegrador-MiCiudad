@model List<ProyectoIntegrador_MiCiudad.Models.Reporte>

<head>
    <link rel="stylesheet" href="~/css/reportes.css" />
</head>

<div class="main-container">
    <div class="content-wrapper">
        <h2 class="reportes-title">Reportes</h2>

        <div class="reportes-list">
            <table class="table table-striped reportes-table">
                <thead>
                    <tr class="table-header">
                        <th>ID</th>
                        <th>Usuario</th>
                        <th>Hora</th>
                        <th>Día</th>
                        <th>Tipo</th>
                        <th>Dirección</th>
                        <th>Descripción</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var reporte in Model)
                    {
                        <tr class="table-row">
                            <td>@reporte.ID</td>
                            <td>@reporte.IdUsuario</td>
                            <td>@reporte.Hora</td>
                            <td>@reporte.Dia.ToShortDateString()</td>
                            <td>@reporte.Tipo</td>
                            <td>@reporte.Direccion</td>
                            <td>@reporte.Descripcion</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>

        <h3 class="form-title">Crear Nuevo Reporte</h3>
        <div class="form-container">
            <form asp-action="CrearReporte" method="post" class="report-form">
                <div class="form-group">
                    <label for="Tipo">Tipo de Delito:</label>
                    <select name="Tipo" class="form-control" required>
                        <option value="Robo">Robo</option>
                        <option value="Vandalismo">Vandalismo</option>
                        <option value="Agresión">Agresión</option>
                        <option value="Daños a la Propiedad">Daños a la Propiedad</option>
                        <option value="Violencia de Género">Violencia de Género</option>
                        <option value="Otro">Otro</option>
                    </select>
                </div>
                <div class="form-group">
                    <label for="Dia">Día:</label>
                    <input type="date" name="Dia" class="form-control" required />
                </div>
                <div class="form-group">
                    <label for="Hora">Hora:</label>
                    <input type="time" name="Hora" class="form-control" required />
                </div>
                <div class="form-group">
                    <label for="Direccion">Dirección:</label>
                    <input type="text" name="Direccion" class="form-control" required />
                </div>
                <div class="form-group">
                    <label for="Descripcion">Descripción:</label>
                    <textarea name="Descripcion" class="form-control" rows="3"></textarea>
                </div>
                <button type="submit" class="btn btn-primary report-btn">Crear Reporte</button>
            </form>
        </div>
    </div>
</div>

